{
  "manifest_version": 2,

  "name": "Pro Mode for YouTube Video Editor",
  "minimum_chrome_version" : "22.0.0.0",
  "description": "Enables various hotkeys to speed up and generally make YouTube's video editor more usable.",
  "version": "0.20",
  "short_name" : "YTEditorProMode",
  "icons": { "16": "images/icon16.png",
             "48": "images/icon48.png",
             "128": "images/icon128.png" },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/editor*"],
      "css": ["css/jquery-ui.css","css/jquery-ui.structure.css","css/style.css","css/bootstrap.css"],
      "js": ["js/jquery-1.11.1.min.js","js/jquery-ui.js","js/bootstrap.js","js/yteditorpro.js"]
    }
  ],
  "web_accessible_resources": [
  "images/*.png",
  "images/jquery-ui/*.png",
  "fonts/glyphicons*",
  "html/*"
  ],
  "background": {
    "persistent": false,
    "scripts": ["js/jquery-1.11.1.min.js","js/gahelper.js"]
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
